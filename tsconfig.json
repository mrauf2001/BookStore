{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/youngreader/layout.jsx",
    "app/context/CartContext.tsx",
    "app/components/navbar/Navbar.tsx",
    "app/components/mainFooter/MainFooter.jsx",
    "app/garden/page.tsx",
    "app/books/page.jsx",
    "app/components/form/Contact.jsx"
  ],
  "exclude": ["node_modules"]
}
